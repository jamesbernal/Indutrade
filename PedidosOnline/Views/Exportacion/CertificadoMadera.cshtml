<script>
    $('#fecha').datepicker({
        dateFormat: 'dd/mm/yy',
        minDate: 0,
        maxDate: '+3Y',
        inline: true
    });

    function SoloNumeros(e){
        debugger
        var key = window.Event ? e.which : e.keyCode
        return (key >= 48 && key <= 57 || key == 46 )
    }
    $('#autoc_motonave').on('keyup keypress', function (e) {

