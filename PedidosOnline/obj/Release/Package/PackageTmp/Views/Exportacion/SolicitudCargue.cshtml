<script>
    function Modal_() {
        var urlWithCont = "ModalVehiculo";
        $("#Dialog")
        .load(urlWithCont.trim())

    }

    function cargarV() {
        if ($("#solicitudT").val() == "") {
            Mensajes('Cargue una proforma primero!', 'error', '');
            return null;
        }
        $("#vehiculosAuto").autocomplete({
            source: "VehiculoAutocomplete",
            select: function (evento, ui) {
                debugger
                if (ui.item != null) {
                    $("#idvehiculo").val(ui.item.RowID)
                }
            },
        });
    }
    function cargarR() {
        if ($("#solicitudT").val() == "") {
