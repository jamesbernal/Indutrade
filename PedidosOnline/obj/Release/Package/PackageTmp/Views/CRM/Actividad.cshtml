        startDate: "@DateTime.Now"
    });

    $('#fecha_final').datetimepicker({
        dayOfWeekStart: 1,
        lang: 'en',
        disabledDates: ['1986/01/08', '1986/01/09', '1986/01/10'],
        startDate: "@DateTime.Now"
    });
</script>


